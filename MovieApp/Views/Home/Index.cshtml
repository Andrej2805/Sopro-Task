@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Movies</h2>

<span>
    @Html.ActionLink("Create New", "Create", null, new { @class = "list-group-item list-group-item-action active", @style = "width:150px; text-align: center; margin-bottom: 5px"})
</span>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td style="display:flex">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "list-group-item list-group-item-action active", @style = "width:100px; text-align: center; margin-right:5px" })
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "list-group-item list-group-item-action active", @style = "width:100px; text-align: center; margin-right:5px" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "list-group-item-danger list-group-item active", @style = "width:100px; text-align: center" })
        </td>
    </tr>
}

</table>
